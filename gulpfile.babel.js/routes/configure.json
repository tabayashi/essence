{
  "development": {
    "files": {
      "watch": "sources/files/**/*",
      "src": "sources/files/**/*",
      "dest": "public"
    },
    "html": {
      "watch": "sources/documents/**/*.pug",
      "src": "sources/documents/**/*.pug",
      "inc": "modules/documents",
      "dest": "public"
    },
    "css": {
      "watch": "sources/styles/**/*.styl",
      "src": "sources/styles/*.styl",
      "inc": [
        "data/icons",
        "data/sprites",
        "library/styles",
        "modules/styles"
      ],
      "dest": "public/styles"
    },
    "js": {
      "watch": "sources/scripts/**/*.js",
      "src": "sources/scripts/*.js",
      "dest": "public/scripts"
    },
    "assets": {
      "watch": "sources/assets/**/*",
      "src": "sources/assets/**/*",
      "dest": "public/assets"
    },
    "sprites": {
      "watch": "sources/sprites/**/*.png",
      "src": "sources/sprites/**/*.png",
      "dest": {
        "img": "public/assets",
        "css": "data/sprites"
      }
    },
    "icons": {
      "watch": "sources/icons/**/*.svg",
      "src": "sources/icons/**/*.svg",
      "dest": {
        "fonts": "public/fonts",
        "styles": "data/icons"
      }
    }
  },
  "production": {}
}
