{
  "development": {
    "data": {
      "watch": "sources/data/files/**/*",
      "src": "sources/data/files/**/*",
      "dest": "public"
    },
    "html": {
      "watch": "sources/pages/**/*.pug",
      "src": "sources/pages/files/**/*.pug",
      "inc": "node_modules",
      "dest": "public"
    },
    "css": {
      "watch": "sources/styles/**/*.styl",
      "src": "sources/styles/files/*.styl",
      "inc": [
        "sources/styles/data",
        "sources/styles/modules",
        "sources/styles/components"
      ],
      "dest": "public/styles"
    },
    "js": {
      "watch": "sources/scripts/**/*.js",
      "src": "sources/scripts/files/*.js",
      "dest": "public/scripts"
    },
    "assets": {
      "watch": "sources/assets/files/**/*",
      "src": "sources/assets/files/**/*",
      "dest": "public/assets"
    },
    "sprites": {
      "watch": "sources/sprites/files/**/*.png",
      "src": "sources/sprites/files/**/*.png",
      "dest": {
        "img": "public/assets",
        "css": "sources/styles/data"
      }
    },
    "icons": {
      "watch": "sources/icons/files/**/*.svg",
      "src": "sources/icons/files/**/*.svg",
      "dest": {
        "fonts": "public/fonts",
        "styles": "sources/styles/data"
      }
    }
  },
  "production": {}
}
